---
import '../styles/global.css';
import Navbar from '../components/NavbarFr.astro';
import Footer from '../components/FooterFr.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Los Peludos de Cris - refuge animalier et adoption" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/logo.jpg" />
		<title>{title}</title>
        <slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased flex flex-col min-h-screen">
        
        <Navbar />

        <main class="flex-1">
		    <slot />
        </main>

        <Footer />
        
	</body>
</html>
