---
import '../styles/global.css';
import Navbar from '../components/NavbarEn.astro';
import Footer from '../components/FooterEn.astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Los Peludos de Cris - animal rescue and adoption" />
		<meta name="google-site-verification" content="1e6vicy_05-HhaSgGsbf1eq7OtZvD-mal29RR5CCq80" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/logo.jpg" />
		<title>{title}</title>
        <slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased flex flex-col min-h-screen">
        
        <Navbar />

        <main class="flex-1">
		    <slot />
        </main>

        <Footer />
        <Analytics />
        
	</body>
</html>
