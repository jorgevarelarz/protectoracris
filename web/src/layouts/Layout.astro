---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Los Peludos de Cris: Protectora de animales y refugio. Adoptar perros y gatos, casas de acogida y donaciones. Ayudamos a encontrar un hogar en España." />
		<meta name="keywords" content="Los Peludos de Cris, protectora cris, adoptar perro, adoptar gato, refugio animales" />
		<meta name="google-site-verification" content="1e6vicy_05-HhaSgGsbf1eq7OtZvD-mal29RR5CCq80" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Los Peludos de Cris - Adopta un amigo fiel" />
		<meta property="og:description" content="Protectora de animales. Rescatamos, curamos y buscamos hogares. ¡Ayúdanos!" />
		<meta property="og:image" content="https://protectoracris.vercel.app/perro-feliz.jpg" />
		<meta property="og:url" content={Astro.url} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/jpeg" href="/logo.jpg" />
		<title>{title}</title>
        <slot name="head" />
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans antialiased flex flex-col min-h-screen">
        
        <Navbar />

        <main class="flex-1">
		    <slot />
        </main>

        <Footer />
        <Analytics />
        
	</body>
</html>
