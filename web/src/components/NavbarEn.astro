---
// src/components/NavbarEn.astro
---
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      
      <a href="/en" class="flex items-center gap-3 group">
        <img src="/logo.jpg" alt="Los Peludos de Cris" class="w-12 h-12 rounded-full object-cover border border-gray-200" />
        <div class="flex flex-col">
            <span class="font-bold text-xl text-gray-900 group-hover:text-indigo-600 transition-colors">Los Peludos de Cris</span>
            <span class="text-xs text-gray-500 font-medium">Animal rescue</span>
        </div>
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        <a href="/en" class="text-gray-600 hover:text-indigo-600 font-medium transition-colors">Home</a>
        <a href="/en/adoptions" class="text-gray-600 hover:text-indigo-600 font-medium transition-colors">Adopt</a>
        <a href="/en/adopted" class="text-gray-600 hover:text-indigo-600 font-medium transition-colors">Happy Endings</a>
        <a href="/en/foster" class="text-gray-600 hover:text-indigo-600 font-medium transition-colors">Foster</a>
        
        <a href="/en/donations" class="bg-indigo-600 text-white px-5 py-2.5 rounded-full font-bold hover:bg-indigo-700 transition-transform hover:scale-105 shadow-md flex items-center gap-2">
            <span>❤️</span> Donate
        </a>
      </nav>

      <button class="md:hidden text-gray-600">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>

    </div>
  </div>
</header>
