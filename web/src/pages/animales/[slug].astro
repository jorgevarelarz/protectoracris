---
import { client, urlFor } from '../../lib/sanity';
import Layout from '../../layouts/Layout.astro'; // <--- Importamos la plantilla

export async function getStaticPaths() {
  const query = `*[_type == "animal"]{ "slug": slug.current }`;
  const animales = await client.fetch(query);
  return animales.map((animal) => ({ params: { slug: animal.slug } }));
}

const { slug } = Astro.params;
const query = `*[_type == "animal" && slug.current == $slug][0]{
  ...,
  causa {
    titulo,
    costeTotal,
    recaudado,
    urgencia,
    documentos[] {
      _type,
      asset->{
        url,
        originalFilename
      }
    }
  }
}`;
const animal = await client.fetch(query, { slug });

if (!animal) return Astro.redirect('/404');

const recaudado = animal?.causa?.recaudado ?? 0;
const costeTotal = animal?.causa?.costeTotal ?? 0;
const porcentaje =
  costeTotal > 0
    ? Math.min(100, Math.round((recaudado / costeTotal) * 100))
    : 0;
const currentUrl = Astro.url.href;
const encodedUrl = encodeURIComponent(currentUrl);
