---
import { client, urlFor } from '../../lib/sanity';
import Layout from '../../layouts/Layout.astro'; // <--- Importamos la plantilla

export async function getStaticPaths() {
  const query = `*[_type == "animal"]{ "slug": slug.current }`;
  const animales = await client.fetch(query);
  return animales.map((animal) => ({ params: { slug: animal.slug } }));
}

const { slug } = Astro.params;
const query = `*[_type == "animal" && slug.current == $slug][0]`;
const animal = await client.fetch(query, { slug });

if (!animal) return Astro.redirect('/404');
---

<Layout title={`${animal.nombre} busca familia`}>
  
    <head slot="head">
        <meta property="og:image" content={urlFor(animal.imagen).width(800).url()} />
    </head>

    <nav class="p-4 max-w-4xl mx-auto">
      <a href="/" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
        ← Volver a todos los animales
      </a>
    </nav>

    <main class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl overflow-hidden mb-12">
      <div class="md:flex">
        <div class="md:w-1/2 bg-gray-200">
           {animal.imagen && (
            <img 
              src={urlFor(animal.imagen).width(800).height(1000).url()} 
              alt={animal.nombre} 
              class="w-full h-full object-cover min-h-[400px]"
            />
           )}
        </div>

        <div class="md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
          <div class="flex justify-between items-start">
            <div>
              <h1 class="text-4xl font-extrabold text-gray-900 mb-2">{animal.nombre}</h1>
              <p class="text-lg text-gray-500 font-medium capitalize">{animal.especie} • {animal.sexo}</p>
            </div>
             <span class={`px-3 py-1 rounded-full text-sm font-bold text-white uppercase tracking-wide
                ${animal.estado === 'urgente' ? 'bg-red-500' : 
                  animal.estado === 'reservado' ? 'bg-yellow-500' : 
                  'bg-indigo-600'
                }`}>
                {animal.estado}
              </span>
          </div>

          <div class="mt-8 space-y-4">
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="bg-gray-50 p-3 rounded-lg">
                    <span class="block text-gray-400 text-xs uppercase">Nacimiento</span>
                    <span class="font-semibold">{animal.fechaNacimiento || 'Desconocida'}</span>
                </div>
                <div class="bg-gray-50 p-3 rounded-lg">
                    <span class="block text-gray-400 text-xs uppercase">Salud</span>
                    <span class="font-semibold text-green-700">{animal.salud || 'Sano'}</span>
                </div>
            </div>

            <div class="mt-6">
                <h3 class="font-bold text-gray-900 mb-2">Su historia</h3>
                <p class="text-gray-600 leading-relaxed whitespace-pre-line">
                    {animal.descripcion}
                </p>
            </div>
          </div>

          <div class="mt-10 pt-6 border-t border-gray-100 space-y-3">
             <a 
                href="/adopciones"
                class="flex items-center justify-center w-full bg-gray-900 text-white font-bold py-3 rounded-xl hover:bg-indigo-600 transition-colors"
             >
                Como adoptar
             </a>
             <a 
                href={`https://wa.me/34600000000?text=Hola,%20me%20interesa%20adoptar%20a%20${animal.nombre}`}
                target="_blank"
                class="flex items-center justify-center w-full bg-green-500 text-white font-bold py-4 rounded-xl hover:bg-green-600 transition-transform hover:scale-105 shadow-lg"
             >
                Solicitar Adopción por WhatsApp
             </a>
          </div>
        </div>
      </div>
    </main>

</Layout>
