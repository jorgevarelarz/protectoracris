---
import { client, urlFor } from '../../lib/sanity';
import Layout from '../../layouts/Layout.astro'; // <--- Importamos la plantilla

export async function getStaticPaths() {
  const query = `*[_type == "animal"]{ "slug": slug.current }`;
  const animales = await client.fetch(query);
  return animales.map((animal) => ({ params: { slug: animal.slug } }));
}

const { slug } = Astro.params;
const query = `*[_type == "animal" && slug.current == $slug][0]{
  ...,
  causa {
    titulo,
    costeTotal,
    recaudado,
    urgencia,
    documentos[] {
      _type,
      asset->{
        url,
        originalFilename
      }
    }
  }
}`;
const animal = await client.fetch(query, { slug });

if (!animal) return Astro.redirect('/404');

const recaudado = animal?.causa?.recaudado ?? 0;
const costeTotal = animal?.causa?.costeTotal ?? 0;
const porcentaje =
  costeTotal > 0
    ? Math.min(100, Math.round((recaudado / costeTotal) * 100))
    : 0;
---

<Layout title={`${animal.nombre} busca familia`}>
  
    <head slot="head">
        <meta property="og:image" content={urlFor(animal.imagen).width(800).url()} />
    </head>

    <nav class="p-4 max-w-4xl mx-auto">
      <a href="/" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
        ‚Üê Volver a todos los animales
      </a>
    </nav>

    <main class="max-w-4xl mx-auto bg-white rounded-3xl shadow-xl overflow-hidden mb-12">
      <div class="md:flex">
        <div class="md:w-1/2 bg-gray-100 flex items-center justify-center p-4">
           {animal.imagen && (
            <img 
              src={urlFor(animal.imagen).width(800).fit('max').url()} 
              alt={animal.nombre} 
              class="w-full h-auto object-contain max-h-[520px]"
            />
           )}
        </div>

        <div class="md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
          <div class="flex justify-between items-start">
            <div>
              <h1 class="text-4xl font-extrabold text-gray-900 mb-2">{animal.nombre}</h1>
              <p class="text-lg text-gray-500 font-medium capitalize">{animal.especie} ‚Ä¢ {animal.sexo}</p>
            </div>
             <span class={`px-3 py-1 rounded-full text-sm font-bold text-white uppercase tracking-wide
                ${animal.estado === 'urgente' ? 'bg-red-500' : 
                  animal.estado === 'reservado' ? 'bg-yellow-500' : 
                  'bg-indigo-600'
                }`}>
                {animal.estado}
              </span>
          </div>

          <div class="mt-8 space-y-4">
            <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="bg-gray-50 p-3 rounded-lg">
                    <span class="block text-gray-400 text-xs uppercase">Nacimiento</span>
                    <span class="font-semibold">{animal.fechaNacimiento || 'Desconocida'}</span>
                </div>
                <div class="bg-gray-50 p-3 rounded-lg">
                    <span class="block text-gray-400 text-xs uppercase">Salud</span>
                    <span class="font-semibold text-green-700">{animal.salud || 'Sano'}</span>
                </div>
            </div>

          <div class="mt-6">
                <h3 class="font-bold text-gray-900 mb-2">Su historia</h3>
                <p class="text-gray-600 leading-relaxed whitespace-pre-line">
                    {animal.descripcion}
                </p>
            </div>
          </div>

          {animal.causa && (
            <div class="mt-8 bg-white border-2 border-indigo-100 rounded-2xl p-6 shadow-sm relative overflow-hidden">
              {animal.causa.urgencia && (
                <div class="absolute top-0 right-0 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-bl-xl">
                  üÜò URGENTE
                </div>
              )}

              <h3 class="text-xl font-bold text-gray-900 mb-1 flex items-center gap-2">
                ü©∫ Necesita tu ayuda: <span class="text-indigo-600">{animal.causa.titulo}</span>
              </h3>
              <p class="text-sm text-gray-500 mb-4">
                Para curarse y poder ser adoptado, necesita este tratamiento.
              </p>
              {animal.causa.documentos && animal.causa.documentos.length > 0 && (
                <div class="mb-6 flex flex-wrap gap-2">
                  {animal.causa.documentos.map((doc) => (
                    <a
                      href={doc.asset.url}
                      target="_blank"
                      class="inline-flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-300 rounded-md text-xs font-medium text-gray-700 hover:bg-gray-50 transition-colors shadow-sm"
                    >
                      {doc._type === 'file' ? 'üìÑ' : 'üì∑'}
                      <span>Ver {doc._type === 'file' ? 'Factura/Doc' : 'Prueba'}</span>
                    </a>
                  ))}
                </div>
              )}

              <div class="w-full bg-gray-200 rounded-full h-4 mb-2 overflow-hidden">
                <div
                  class="bg-indigo-600 h-4 rounded-full transition-all duration-1000 ease-out flex items-center justify-end pr-2 text-[10px] text-white font-bold"
                  style={`width: ${porcentaje}%`}
                >
                  {porcentaje > 15 && `${porcentaje}%`}
                </div>
              </div>

              <div class="flex justify-between text-sm font-medium text-gray-700 mb-6">
                <span>Recaudado: {recaudado}‚Ç¨</span>
                <span>Objetivo: {costeTotal}‚Ç¨</span>
              </div>

              <a
                href="/donaciones"
                class="block w-full text-center bg-indigo-100 text-indigo-700 font-bold py-3 rounded-lg hover:bg-indigo-200 transition-colors border border-indigo-200"
              >
                ‚ù§Ô∏è Donar para {animal.nombre}
              </a>

              <p class="text-center text-xs text-gray-400 mt-2">
                Al hacer Bizum, pon en concepto: "Ayuda {animal.nombre}"
              </p>
            </div>
          )}

          <div class="mt-10 pt-6 border-t border-gray-100 space-y-3">
             <a 
                href="/adopciones"
                class="flex items-center justify-center w-full bg-gray-900 text-white font-bold py-3 rounded-xl hover:bg-indigo-600 transition-colors"
             >
                Como adoptar
             </a>
             <a 
                href={`https://wa.me/34600000000?text=Hola,%20me%20interesa%20adoptar%20a%20${animal.nombre}`}
                target="_blank"
                class="flex items-center justify-center w-full bg-green-500 text-white font-bold py-4 rounded-xl hover:bg-green-600 transition-transform hover:scale-105 shadow-lg"
             >
                Solicitar Adopci√≥n por WhatsApp
             </a>
          </div>
        </div>
      </div>
    </main>

</Layout>
