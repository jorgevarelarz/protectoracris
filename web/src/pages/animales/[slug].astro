            "@context": "https://schema.org/",
            "@type": "Product",
            name: animal.nombre,
            image: urlFor(animal.imagen).width(800).url(),
            description: animal.descripcion,
            brand: {
              "@type": "Organization",
              name: "Los Peludos de Cris",
            },
            offers: {
              "@type": "Offer",
              url: Astro.url.href,
