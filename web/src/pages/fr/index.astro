---
import { client, urlFor } from '../../lib/sanity';
import Layout from '../../layouts/LayoutFr.astro';

const query = `*[_type == "animal"] | order(_createdAt desc) {
  nombre,
  estado,
  especie,
  imagen,
  "slug": slug.current,
  causa {
    urgencia
  }
}`;

const animales = await client.fetch(query);

const statusLabels = {
  urgente: 'urgent',
  reservado: 'reserve',
  adoptado: 'adopte',
  adopcion: 'a adopter',
};

const speciesLabels = {
  perro: 'chien',
  gato: 'chat',
  otro: 'autre',
};
---

<Layout title="Los Peludos de Cris">

  <section class="relative bg-gray-900 text-white">
    <div class="absolute inset-0">
      <img 
        src="/perro-feliz.jpg" 
        alt="Chien heureux" 
        class="w-full h-full object-cover opacity-40"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-4 py-24 sm:py-32 flex flex-col items-center text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
        N'achetez pas, <span class="text-indigo-400">adoptez</span> un ami fidele
      </h1>
      
      <p class="text-lg md:text-xl text-gray-300 max-w-2xl mb-10">
        Chez Los Peludos de Cris, nous sauvons, soignons et offrons une seconde chance.
        Votre aide change des vies, une patte a la fois.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
        <a href="#animaux" class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-4 rounded-full font-bold text-lg transition-transform hover:scale-105 shadow-lg flex items-center justify-center gap-2">
          üê∂ Voir les animaux a l'adoption
        </a>

        <div class="flex gap-4">
          <a href="/fr/accueil" class="flex-1 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 px-6 py-4 rounded-full font-semibold transition-colors text-center">
            üè† Devenir famille d'accueil
          </a>
          <a href="/fr/dons" class="flex-1 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 px-6 py-4 rounded-full font-semibold transition-colors text-center">
            ‚ù§Ô∏è Faire un don
          </a>
        </div>
      </div>
    </div>
  </section>

  <main class="max-w-6xl mx-auto px-4 py-10">
    
    <div id="animaux" class="scroll-mt-24">
      <h2 class="text-2xl font-bold mb-6">Nos animaux a l'adoption</h2>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      
      {animales.map((animal) => (
        <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
          
          <div class="h-64 w-full bg-gray-200 relative group">
            {animal.imagen && (
              <img 
                src={urlFor(animal.imagen).width(500).height(500).url()} 
                alt={animal.nombre}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            )}
            <div class="absolute top-3 right-3 flex flex-col gap-2 items-end">
              <span class={`px-3 py-1 rounded-full text-xs font-bold text-white uppercase tracking-wide shadow-sm
                ${animal.estado === 'urgente' ? 'bg-red-500' : 
                  animal.estado === 'reservado' ? 'bg-yellow-500' : 
                  animal.estado === 'adoptado' ? 'bg-green-500' : 'bg-indigo-600'
                }`}>
                {statusLabels[animal.estado] ?? animal.estado}
              </span>

              {animal.causa && (
                <span class="bg-white text-indigo-600 border border-indigo-100 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide shadow-sm flex items-center gap-1 animate-pulse">
                  üöë Traitement
                </span>
              )}
            </div>
          </div>

          <div class="p-6">
            <div class="flex justify-between items-baseline">
              <h3 class="text-2xl font-bold text-gray-900">{animal.nombre}</h3>
              <span class="text-sm text-gray-500 capitalize">{speciesLabels[animal.especie] ?? animal.especie}</span>
            </div>
            
            <a href={`/fr/animaux/${animal.slug}`} class="mt-4 block w-full text-center bg-gray-900 text-white font-medium py-2 rounded-lg hover:bg-indigo-600 transition-colors">
              En savoir plus
            </a>
          </div>

        </article>
      ))}

    </div>

    {animales.length === 0 && (
      <p class="text-center text-gray-500 py-10">Aucun animal pour le moment (ou verifiez que le contenu est publie dans Sanity).</p>
    )}

  </main>

</Layout>
