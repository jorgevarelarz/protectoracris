---
import { client, urlFor } from '../../lib/sanity';
import Layout from '../../layouts/LayoutEn.astro';

const query = `*[_type == "animal"] | order(_createdAt desc) {
  nombre,
  estado,
  especie,
  imagen,
  "slug": slug.current,
  causa {
    urgencia
  }
}`;

const animales = await client.fetch(query);

const statusLabels = {
  urgente: 'urgent',
  reservado: 'reserved',
  adoptado: 'adopted',
  adopcion: 'for adoption',
};

const speciesLabels = {
  perro: 'dog',
  gato: 'cat',
  otro: 'other',
};
---

<Layout title="Los Peludos de Cris">

  <section class="relative bg-gray-900 text-white">
    <div class="absolute inset-0">
      <img 
        src="/perro-feliz.jpg" 
        alt="Happy dog" 
        class="w-full h-full object-cover opacity-40"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/40"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-4 py-24 sm:py-32 flex flex-col items-center text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
        Don't buy, <span class="text-indigo-400">adopt</span> a loyal friend
      </h1>
      
      <p class="text-lg md:text-xl text-gray-300 max-w-2xl mb-10">
        At Los Peludos de Cris we rescue, heal, and give second chances.
        Your help transforms lives, one paw at a time.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 w-full sm:w-auto">
        <a href="#animals" class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-4 rounded-full font-bold text-lg transition-transform hover:scale-105 shadow-lg flex items-center justify-center gap-2">
          üê∂ View animals for adoption
        </a>

        <div class="flex gap-4">
          <a href="/en/foster" class="flex-1 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 px-6 py-4 rounded-full font-semibold transition-colors text-center">
            üè† Become a foster home
          </a>
          <a href="/en/donations" class="flex-1 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white border border-white/30 px-6 py-4 rounded-full font-semibold transition-colors text-center">
            ‚ù§Ô∏è Donate
          </a>
        </div>
      </div>
    </div>
  </section>

  <main class="max-w-6xl mx-auto px-4 py-10">
    
    <div id="animals" class="scroll-mt-24">
      <h2 class="text-2xl font-bold mb-6">Our pets looking for a home</h2>
    </div>

    <div class="flex justify-center gap-4 mb-8">
      <button class="filter-btn active bg-gray-900 text-white px-6 py-2 rounded-full font-bold transition-all hover:scale-105" data-filter="todos">
        All
      </button>
      <button class="filter-btn bg-white text-gray-600 border border-gray-200 px-6 py-2 rounded-full font-bold transition-all hover:scale-105 hover:border-indigo-500" data-filter="perro">
        üê∂ Dogs
      </button>
      <button class="filter-btn bg-white text-gray-600 border border-gray-200 px-6 py-2 rounded-full font-bold transition-all hover:scale-105 hover:border-indigo-500" data-filter="gato">
        üê± Cats
      </button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      
      {animales.map((animal) => (
        <article
          class="animal-card bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100"
          data-especie={animal.especie}
        >
          
          <div class="h-64 w-full bg-gray-200 relative group">
            {animal.imagen && (
              <img 
                src={urlFor(animal.imagen).width(500).height(500).url()} 
                alt={animal.nombre}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
            )}
            <div class="absolute top-3 right-3 flex flex-col gap-2 items-end">
              <span class={`px-3 py-1 rounded-full text-xs font-bold text-white uppercase tracking-wide shadow-sm
                ${animal.estado === 'urgente' ? 'bg-red-500' : 
                  animal.estado === 'reservado' ? 'bg-yellow-500' : 
                  animal.estado === 'adoptado' ? 'bg-green-500' : 'bg-indigo-600'
                }`}>
                {statusLabels[animal.estado] ?? animal.estado}
              </span>

              {animal.causa && (
                <span class="bg-white text-indigo-600 border border-indigo-100 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wide shadow-sm flex items-center gap-1 animate-pulse">
                  üöë Medical care
                </span>
              )}
            </div>
          </div>

          <div class="p-6">
            <div class="flex justify-between items-baseline">
              <h3 class="text-2xl font-bold text-gray-900">{animal.nombre}</h3>
              <span class="text-sm text-gray-500 capitalize">{speciesLabels[animal.especie] ?? animal.especie}</span>
            </div>
            
            <a href={`/en/animals/${animal.slug}`} class="mt-4 block w-full text-center bg-gray-900 text-white font-medium py-2 rounded-lg hover:bg-indigo-600 transition-colors">
              Meet me
            </a>
          </div>

        </article>
      ))}

    </div>

    {animales.length === 0 && (
      <p class="text-center text-gray-500 py-10">No animals found at the moment (or make sure you have published content in Sanity).</p>
    )}

  </main>

  <script>
    const buttons = document.querySelectorAll('.filter-btn');
    const cards = document.querySelectorAll('.animal-card');

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        buttons.forEach((b) => {
          b.classList.remove('bg-gray-900', 'text-white');
          b.classList.add('bg-white', 'text-gray-600');
        });
        btn.classList.remove('bg-white', 'text-gray-600');
        btn.classList.add('bg-gray-900', 'text-white');

        const filter = btn.getAttribute('data-filter');

        cards.forEach((card) => {
          if (filter === 'todos' || card.getAttribute('data-especie') === filter) {
            card.classList.remove('hidden');
            card.classList.add('block');
          } else {
            card.classList.add('hidden');
            card.classList.remove('block');
          }
        });
      });
    });
  </script>

</Layout>
