---
import { client, urlFor } from '../lib/sanity';
import Layout from '../layouts/Layout.astro';

const query = `*[_type == "animal" && estado == "adoptado"] | order(_createdAt desc) {
  nombre,
  estado,
  especie,
  imagen,
  "slug": slug.current
}`;
const adoptados = await client.fetch(query);
